<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".searchTermLao">
    <ImageView
        android:id="@+id/imageView"
        android:layout_width="147dp"
        android:layout_height="144dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.112"
        app:srcCompat="@drawable/logo" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="335dp"
        android:layout_height="39dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="8dp"
        android:backgroundTint="@color/cardview_shadow_end_color"
        android:gravity="center_vertical"
        android:shadowColor="@color/cardview_shadow_end_color"
        android:text="Showing bus terminals headed to Laoag, Ilocos Norte"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView"
        app:layout_constraintVertical_bias="0.018" />

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="373dp"
        android:layout_height="382dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        app:layout_constraintVertical_bias="0.06">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:id="@+id/partasCubao"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:gravity="left|center_vertical"
                android:onClick="displayPartasCub"
                android:text="PARTAS - Cubao"
                tools:layout_editor_absoluteX="6dp"
                tools:layout_editor_absoluteY="237dp" />

            <Button
                android:id="@+id/partasPasay"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:gravity="left|center_vertical"
                android:onClick="displayPartasPasay"
                android:text="PARTAS - Pasay"
                tools:layout_editor_absoluteX="6dp"
                tools:layout_editor_absoluteY="237dp" />

            <Button
                android:id="@+id/partasLaonLaan"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:gravity="left|center_vertical"
                android:onClick="displayPartasLaonlaan"
                android:text="PARTAS - LaonLaaan"
                tools:layout_editor_absoluteX="6dp"
                tools:layout_editor_absoluteY="237dp" />

            <Button
                android:id="@+id/gvLacson"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:gravity="left|center_vertical"
                android:onClick="displayGv"
                android:text="GV FLORIDEA TRANSPORT"
                tools:layout_editor_absoluteX="6dp"
                tools:layout_editor_absoluteY="237dp" />

            <Button
                android:id="@+id/farinasLacson"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:gravity="left|center_vertical"
                android:onClick="displayFarinas"
                android:text="FARINAS TRANS"
                tools:layout_editor_absoluteX="6dp"
                tools:layout_editor_absoluteY="237dp" />


        </LinearLayout>
    </ScrollView>

</android.support.constraint.ConstraintLayout>